<div class="col-md-8 col-md-offset-2 reviews-box">

    <h1>Edit a review</h1>
    <hr><br>

    <%= simple_form_for [@one_gem, @one_review] do |f| %>
        <%= f.input :rating, label:"Rating(out of 5)", input_html: { min: 0, max: 5} %>
        <%= f.input :comment, label:"Comment" %>
        <%= f.button :submit, "Submit", class: "btn btn-primary" %>
    <% end %>

</div>